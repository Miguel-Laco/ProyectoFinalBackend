{{!-- Aca tengo que crear un vista de todos los productos en tiempo real y un formulario
    para poder agregar productos desde la página --}}


{{!-- Creo un formulario para agregar productos --}}

<form class="card container-sm mt-4 mb-4">
  <div class="row mt-1">
  <div class="col-sm">
    <input type="text" id="title" class="form-control" placeholder="Title" aria-label="title" required>
  </div>
  <div class="col-sm">
    <input type="text" id="description" class="form-control" placeholder="Description" aria-label="description" required>
  </div>
  <div class="col-sm">
    <input type="text" id="code" class="form-control" placeholder="Code" aria-label="code" required>
  </div>
  </div>
  <div class="row">
  <div class="col-sm">
    <input type="number" id="price" class="form-control" placeholder="Price" aria-label="price" required>
  </div>

  <div class="col-sm">
    <input type="number" id="stock" class="form-control" placeholder="Stock" aria-label="stock" required>
  </div>
  <div class="col-sm">
    <input type="text" id="category" class="form-control" placeholder="Category" aria-label="category" required>
  </div>
    </div>
  <div class="row">
    <div class=" text-center">
    <label class="">Thumbnail:</label>
  <select class="form-select col" id="thumbnail" aria-label="Default select example" required>
    <option selected value="https://cdn-icons-png.flaticon.com/512/10636/10636860.png">Color Image</option>
  <option value="https://cdn-icons-png.flaticon.com/512/739/739249.png">White Image</option>
</select>
</div>
</div>
  <button type="submit" class="btn btn-primary mt-2 mb-1">Submit</button>
</form>

{{!-- Creo un contenedor, que recibirá toda la lista de productos recibida por websocket --}}
<div class="container">
    <div class="row" id="contenedorProductos">
    </div>
</div>





<script src="/socket.io/socket.io.js"></script> {{!-- Instanciamos un socket --}}
